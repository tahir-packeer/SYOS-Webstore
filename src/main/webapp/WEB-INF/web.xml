<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>SYOS Management System</display-name>

    <!-- Customer Management Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/api/customers/*</url-pattern>
    </servlet-mapping>

    <!-- POS Customer Management Servlet -->
    <servlet>
        <servlet-name>POSCustomerServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.POSCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>POSCustomerServlet</servlet-name>
        <url-pattern>/api/pos-customers/*</url-pattern>
    </servlet-mapping>

    <!-- Sales Transaction Servlet -->
    <servlet>
        <servlet-name>SalesServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.SalesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalesServlet</servlet-name>
        <url-pattern>/api/sales/*</url-pattern>
    </servlet-mapping>

    <!-- Online Sales Servlet -->
    <servlet>
        <servlet-name>OnlineSalesServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.OnlineSalesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OnlineSalesServlet</servlet-name>
        <url-pattern>/api/online-sales/*</url-pattern>
    </servlet-mapping>

    <!-- Stock Management Servlet -->
    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.StockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/api/stock/*</url-pattern>
    </servlet-mapping>

    <!-- Reports Servlet -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/api/reports</url-pattern>
    </servlet-mapping>

    <!-- Staff Authentication Servlet -->
    <servlet>
        <servlet-name>StaffServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.StaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffServlet</servlet-name>
        <url-pattern>/api/staff/*</url-pattern>
    </servlet-mapping>

    <!-- Items API Servlet -->
    <servlet>
        <servlet-name>ItemsController</servlet-name>
        <servlet-class>org.example.presentation.controllers.ItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemsController</servlet-name>
        <url-pattern>/api/items/*</url-pattern>
    </servlet-mapping>

    <!-- Store Manager Servlet -->
    <servlet>
        <servlet-name>StoreManagerServlet</servlet-name>
        <servlet-class>org.example.presentation.servlets.StoreManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreManagerServlet</servlet-name>
        <url-pattern>/api/store-manager/*</url-pattern>
    </servlet-mapping>

    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

  
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.example.presentation.filters.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

</web-app>